# Public Base URLs (localhost for development)
PUBLIC_TTS_BASE=http://localhost:8001
PUBLIC_VISION_BASE=http://localhost:8004
PUBLIC_AI_BASE=http://localhost:8003
ADMIN_BASE=http://localhost:8002

# Database Configuration
DATABASE_URL=sqlite:////app/data/logs.db
REDIS_URL=redis://redis:6379

# Scenario Configuration
SCENARIO=ai

# Admin Service Configuration
ADMIN_TOKEN=your_admin_token_here

# Service Ports (for reference)
GAME_SERVER_PORT=65432
TTS_SERVICE_PORT=8001
ADMIN_SERVICE_PORT=8002
AI_ORCHESTRATOR_PORT=8003
VISION_SELECTOR_PORT=8004
SUPERVISOR_SERVICE_PORT=8005
REDIS_PORT=6379

# Development Settings
DEBUG=true
LOG_LEVEL=info
TURN_TIMEOUT_SECONDS=15

# LLM Configuration
LLM_ENABLED=1
LLM_MODEL=lmstudio-community/gemma-3-12b-it
GEMINI_API_KEY=your_gemini_api_key_here
LMSTUDIO_URL=http://host.docker.internal:1234/v1
OLLAMA_URL=

# API Keys - DO NOT COMMIT TO GIT
SUNO_API_KEY=your_suno_api_key_here
ELEVEN_API_KEY=your_elevenlabs_api_key_here

# CORS (frontend origin)
WEB_CLIENT_ORIGIN=http://localhost:5173

# Admin Basic Auth (dla UI)
ADMIN_BASIC_USER=admin
ADMIN_BASIC_PASS=change_me

# Proxy/TLS (opcjonalnie, produkcja)
ENABLE_TRAEFIK=0
DOMAIN=example.local
TRAEFIK_ACME_EMAIL=ops@example.com

# Supervisor Rate Limiting
SUP_MAX_REQ_PER_MIN=30
