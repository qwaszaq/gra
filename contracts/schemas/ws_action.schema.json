{
  "$id": "ws_action.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["type", "player", "session_id", "turn_id", "text_raw"],
  "properties": {
    "type": { "const": "action" },
    "contract_version": { "type": "string", "default": "1.0.0" },
    "player": { "type": "string" },
    "session_id": { "type": "string" },
    "turn_id": { "type": "integer", "minimum": 0 },
    "text_raw": { "type": "string", "minLength": 1, "maxLength": 500 },
    "timestamp": { "type": "string" },
    "request_id": { "type": "string" }
  },
  "additionalProperties": false
}
